<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apptuprosor.RegistroCursos"
    >

    <EditText
        android:id="@+id/EditT_Enlace"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:hint="Enlace de tu reunión"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.618"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EditT_titulo"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:hint="Título del curso"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EditT_descripcion"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:hint="Descripción"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/EditT_C_fecha"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:hint="Programar fecha de inicio"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EditT_Hora"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:hint="Programar hora de inicio"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Btn_C_registrar"
        android:layout_width="349dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_redondo"
        android:text="Registrar Curso"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRANDO CURSO"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/EditT_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IV_Curso"
        android:layout_width="175dp"
        android:layout_height="114dp"
        android:scaleType="fitXY"
        android:src="@drawable/galeria"
        app:layout_constraintBottom_toTopOf="@+id/Btn_C_registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.96" />

    <Button
        android:id="@+id/btnImagen"
        android:layout_width="131dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:text="@string/btnCamara"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Btn_C_registrar"
        app:layout_constraintEnd_toStartOf="@+id/IV_Curso"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditT_C_fecha"
        app:layout_constraintVertical_bias="0.825" />

</androidx.constraintlayout.widget.ConstraintLayout>